<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1057.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BorrowReportViewController">
   <Text fx:id="borrowReportTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
   <TextArea fx:id="borrowReportContent" prefHeight="300.0" prefWidth="906.0" wrapText="true" />
   
   <BarChart fx:id="borrowBarChart" prefHeight="250.0" prefWidth="700.0">
       <xAxis>
           <CategoryAxis label="Day of Month" />
       </xAxis>
       <yAxis>
           <NumberAxis label="Number of Books" />
       </yAxis>
   </BarChart>

   <Button onAction="#closeWindow" text="Close" />
</VBox>
